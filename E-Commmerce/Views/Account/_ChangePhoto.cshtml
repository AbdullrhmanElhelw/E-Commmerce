@model UpdateImageViewModel
<form method="post" asp-controller="Account" asp-action="UpdatePhoto" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <label asp-for="Image" class="form-label md-2">Update Profile Picture</label>
    <div class="input-group">
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image"></span>
        <button type="submit" class="btn btn-primary">Change Profile Image</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}